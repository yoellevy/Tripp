<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutYourselfFragment"
    android:background="#2d2d2d">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:src="@drawable/title_one"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/img_right_top"
        android:layout_width="204dp"
        android:layout_height="376dp"
        android:background="@drawable/answer_image_right_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_title" />

    <Button
        android:id="@+id/img_left_top"
        android:layout_width="204dp"
        android:layout_height="376dp"
        android:background="@drawable/answer_frame_park"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_title" />

    <Button
        android:id="@+id/img_left_bottom"
        android:layout_width="204dp"
        android:layout_height="376dp"
        android:background="@drawable/answer_frame_viewpoints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/img_right_bottom"
        android:layout_width="204dp"
        android:layout_height="376dp"
        android:background="@drawable/answer_frame_art"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>

</FrameLayout>