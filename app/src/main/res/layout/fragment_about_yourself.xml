<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutYourselfFragment"
    android:background="#2d2d2d">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="100">
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="10"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="100">
            <ImageView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:src="@drawable/title_one"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    <LinearLayout
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="45"
            android:weightSum="100">
            <Button
                android:id="@+id/img_right_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_margin="2dp"
                android:background="@drawable/answer_image_right_top"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/img_left_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_margin="2dp"
                android:background="@drawable/answer_frame_park"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="45"
            app:layout_constraintBottom_toBottomOf="parent"
            android:weightSum="100">
            <Button
                android:id="@+id/img_left_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_margin="2dp"
                android:background="@drawable/answer_frame_viewpoints"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/img_right_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_margin="2dp"
                android:background="@drawable/answer_frame_art"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

</FrameLayout>