<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectDaysAndTypeFragment"
    android:background="#ffffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <ImageView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:background="@drawable/title_one"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_type_question"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/about_title">
        </TextView>

        <ImageButton
            android:id="@+id/img_right_top"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/selectable_btn"
            android:src="@drawable/answer_frame_park"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_text" />

        <Button
            android:id="@+id/img_left_top"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/answer_frame_park"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_text" />

        <Button
            android:id="@+id/img_left_bottom"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/answer_frame_viewpoints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_left_top" />

        <Button
            android:id="@+id/img_right_bottom"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/answer_frame_art"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_right_top" />

        <TextView
            android:id="@+id/bot_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_duration_question"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_right_bottom">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@id/bot_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <NumberPicker
                android:theme="@style/DefaultNumberPickerTheme"
                android:id="@+id/time_types_picker"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                />
            <NumberPicker
                android:theme="@style/DefaultNumberPickerTheme"
                android:id="@+id/time_length_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/fetch_my_trip_btn"
            android:layout_width="310sp"
            android:layout_height="57sp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/generate_trip_btn"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:text="@string/fetch_my_trip_btn_txt"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />



    </android.support.constraint.ConstraintLayout>



</FrameLayout>