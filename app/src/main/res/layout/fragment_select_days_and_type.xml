<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectDaysAndTypeFragment"
    android:background="#ffffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:src="@drawable/title_one"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_type_question"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/about_title">
        </TextView>

        <ImageButton
            android:id="@+id/img_right_top"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/round_corner"
            android:padding="1dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_text" />

        <Button
            android:id="@+id/img_left_top"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/answer_frame_park"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_text" />

        <Button
            android:id="@+id/img_left_bottom"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/answer_frame_viewpoints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_left_top" />

        <Button
            android:id="@+id/img_right_bottom"
            android:layout_width="@dimen/select_days_and_type_fragment_img_width"
            android:layout_height="@dimen/select_days_and_type_fragment_img_height"
            android:layout_margin="@dimen/select_days_and_type_fragment_img_margin"
            android:background="@drawable/answer_frame_art"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_right_top" />

    </android.support.constraint.ConstraintLayout>



</FrameLayout>